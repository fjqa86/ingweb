<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ingweb.model.User" table="users" catalog="ingweb" optimistic-lock="version">
        <id name="idUser" type="string">
            <column name="id_user" length="250" />
            <generator class="assigned" />
        </id>
        <many-to-one name="rols" class="com.ingweb.model.Rols" fetch="select">
            <column name="rol_id" not-null="true">
                <comment>Rol del usuario</comment>
            </column>
        </many-to-one>
        <property name="password" type="string">
            <column name="password" length="100" not-null="true">
                <comment>Contrasena de usuario</comment>
            </column>
        </property>
        <property name="lastLogin" type="timestamp">
            <column name="last_login" length="19">
                <comment>Ultimo acceso a la aplicacion</comment>
            </column>
        </property>
        <property name="disabled" type="boolean">
            <column name="disabled" not-null="true">
                <comment>Estado del usuario</comment>
            </column>
        </property>
        <property name="name" type="string">
            <column name="name" length="100">
                <comment>Nombres del usuario</comment>
            </column>
        </property>
        <property name="lastname" type="string">
            <column name="lastname" length="100">
                <comment>Apellidos del usuario</comment>
            </column>
        </property>
        <set name="accetedLoanDeviceses" table="acceted_loan_devices" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="user_loan" length="250" not-null="true">
                    <comment>usuario que realizo la solicitud de prestamo</comment>
                </column>
            </key>
            <one-to-many class="com.ingweb.model.AccetedLoanDevices" />
        </set>
        <set name="requestLoanDevicesesForUserApproved" table="request_loan_devices" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="user_approved" length="250">
                    <comment>Usuario que aprueba o cancela el prestamo</comment>
                </column>
            </key>
            <one-to-many class="com.ingweb.model.RequestLoanDevices" />
        </set>
        <set name="requestLoanDevicesesForUserRequest" table="request_loan_devices" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="user_request" length="250" not-null="true">
                    <comment>Usuario que pide el prestamo</comment>
                </column>
            </key>
            <one-to-many class="com.ingweb.model.RequestLoanDevicez" />
        </set>
    </class>
</hibernate-mapping>
